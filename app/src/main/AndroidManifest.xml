        <activity
            android:name=".QuestionTwoActivity"
            android:label="@string/title_activity_question_two" >
        </activity>
        <activity
            android:name=".QuestionThreeActivity"
            android:label="@string/title_activity_question_three" >
        </activity>
        <activity
            android:name=".HalfwayActivity"
            android:label="@string/title_activity_halfway" >
        </activity>
        <activity
            android:name=".FeedbackOneActivity"
            android:label="@string/title_activity_feedback_one" >
        </activity>
        <activity
            android:name=".FeedbackTwoActivity"
            android:label="@string/title_activity_feedback_two" >
